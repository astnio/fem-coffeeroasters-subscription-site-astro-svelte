---
import BaseLayout from '@layouts/BaseLayout.astro';
import HeroImageDesktop from '@assets/home/desktop/image-hero-coffeepress.jpg';
import HeroImageTablet from '@assets/home/tablet/image-hero-coffeepress.jpg';
import HeroImageMobile from '@assets/home/mobile/image-hero-coffeepress.jpg';
import { Image } from 'astro:assets';
import ButtonLink from '@components/ButtonLink.svelte';
import OurCollectionSection from '@components/pages/home/OurCollectionSection.astro';
import WhyChooseUsSection from '@components/pages/home/WhyChooseUsSection.astro';
---

<style lang='scss'>
  @use '@styles/variables' as *;

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: 'Fraunces', serif;
  }

  section.hero {
    display: grid;
    grid-template-areas: 'overlap';
    align-items: center;
    justify-items: center;

    overflow: hidden;
  }

  section.hero > .hero-content {
    grid-area: overlap;
    justify-self: start;

    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: center;

    height: 100%;
    width: 100%;

    margin-left: 5rem;
  }

  section.hero > .hero-picture {
    grid-area: overlap;
    width: 100%;
    height: auto;

    z-index: -1;

    border-radius: 10pt;
  }

  .hero-title {
    font-size: 5rem;
    font-weight: 900;
    color: white;

    max-width: 10ch;

    margin: 0;

    line-height: 1.5ch;
  }

  .hero-paragraph {
    color: $clr-light-cream;
    font-weight: 300;
    line-height: 3ch;

    max-width: 45ch;

    margin-top: 2rem;
    margin-bottom: 3rem;
  }
</style>

<BaseLayout>
  <section class='max-width hero'>
    <Image src={HeroImageDesktop} alt='' class='hero-picture' />
    <div class='hero-content'>
      <h1 class='hero-title'>Great coffee made simple.</h1>
      <p class='hero-paragraph'>
        Start your mornings with the world&rsquo;s best coffees. Try our
        expertly curated artisan coffees from our best roasters delivered
        directly to your door, at your schedule.
      </p>
      <ButtonLink client:load link='/plan'> Create your plan </ButtonLink>
    </div>
  </section>

  <OurCollectionSection />

  <WhyChooseUsSection />

  <section class='max-width'>
    <h2>How it works</h2>
    <ol class='grid'>
      <li class='col-1'>
        <div class='row-1'>
          <div class='icon'></div>
          <div class='line'></div>
        </div>
        <div class='row-2'>
          <p>01</p>
        </div>
        <div class='row-3'>
          <h3>Pick your coffee</h3>
        </div>
        <div class='row-4'>
          <p>
            Select from our evolving range of artisan coffees. Our beans are
            ethically sourced and we pay fair prices for them. There are new
            coffees in all profiles every month for you to try out.
          </p>
        </div>
      </li>

      <li class='col-2'>
        <div class='row-1'>
          <div class='icon'></div>
          <div class='line'></div>
        </div>
        <div class='row-2'>
          <p>02</p>
        </div>
        <div class='row-3'>
          <h3>Choose the frequency</h3>
        </div>
        <div class='row-4'>
          <p>
            Customize your order frequency, quantity, even your roast style and
            grind type. Pause, skip or cancel your subscription with no
            commitment through our online portal.
          </p>
        </div>
      </li>

      <li class='col-3'>
        <div class='row-1'>
          <div class='icon'></div>
          <div class='line'></div>
        </div>
        <div class='row-2'>
          <p>03</p>
        </div>
        <div class='row-3'>
          <h3>Receive and enjoy!</h3>
        </div>
        <div class='row-4'>
          <p>
            We ship your package within 48 hours, freshly roasted. Sit back and
            enjoy award-winning world-class coffees curated to provide a
            distinct tasting experience.
          </p>
        </div>
      </li>
    </ol>
    <button>Create your plan</button>
  </section>
</BaseLayout>

